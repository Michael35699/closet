{
  "name": "closetjs",
  "author": {
    "name": "Henrik Giesel",
    "email": "hengiesel@gmail.com",
    "url": "https://github.com/hgiesel"
  },
  "license": "GPL-3.0",
  "version": "0.1.4",
  "repository": {
    "type": "git",
    "url": "git://github.com/hgiesel/closet.git"
  },
  "scripts": {
    "compile-parser": "bin/compile-parser.sh",
    "create-favicon": "bin/create-favicon.sh",
    "install-dependencies": "bin/install-dependencies.sh",
    "build": "run-p build-docs build-main build-anki build-test",
    "build-docs": "run-s compile-parser create-favicon rollup-docs",
    "build-main": "run-s compile-parser rollup-main",
    "build-anki": "run-s compile-parser rollup-anki",
    "build-test": "run-s compile-parser rollup-test setup-test",
    "setup-test": "bin/setup-test.sh",
    "rollup-docs": "rollup -c rollup/rollup.config.docs.js",
    "rollup-main": "rollup -c rollup/rollup.config.main.js",
    "rollup-anki": "rollup -c rollup/rollup.config.anki.js",
    "rollup-test": "rollup -c rollup/rollup.config.test.js",
    "watch": "run-p watch-docs watch-main watch-anki",
    "watch-docs": "run-s compile-parser rollup-watch-docs",
    "watch-main": "run-s compile-parser rollup-watch-main",
    "watch-anki": "run-s compile-parser rollup-watch-anki",
    "watch-test": "run-s compile-parser rollup-watch-test",
    "rollup-watch-docs": "rollup -c rollup/rollup.config.docs.js -w",
    "rollup-watch-main": "rollup -c rollup/rollup.config.main.js -w",
    "rollup-watch-anki": "rollup -c rollup/rollup.config.anki.js -w",
    "rollup-watch-test": "rollup -c rollup/rollup.config.test.js -w",
    "serve-docs": "bin/serve.sh",
    "serve-test": "serve -l 59045",
    "link": "bin/link.sh -c",
    "dev-docs": "run-p serve-docs watch-docs",
    "dev-anki": "run-s watch-anki",
    "zip": "run-s build-anki zip-sub",
    "zip-sub": "bin/zip.sh",
    "test": "mocha",
    "lint": "eslint . --ext .ts"
  },
  "dependencies": {
    "moo": "^0.5.1",
    "nearley": "^2.19.6",
    "typescript": "^3.9.7"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^11.1.0",
    "@rollup/plugin-node-resolve": "^7.1.3",
    "@rollup/plugin-strip": "^1.3.3",
    "@rollup/plugin-typescript": "^3.1.1",
    "@types/chai": "^4.2.12",
    "@types/mocha": "^7.0.2",
    "@types/nearley": "^2.11.1",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "chai": "^4.2.0",
    "eslint": "^7.7.0",
    "mocha": "^7.2.0",
    "npm-run-all": "^4.1.5",
    "rollup": "^1.32.1",
    "rollup-plugin-terser": "^5.3.0",
    "serve": "^11.3.2",
    "ts-node": "^8.10.2"
  }
}
