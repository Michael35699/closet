{
  "name": "closet",
  "author": {
    "name": "Henrik Giesel",
    "email": "hengiesel@gmail.com",
    "url": "https://github.com/hgiesel"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^3.1.1",
    "npm-run-all": "^4.1.5",
    "rollup": "^1.32.1",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.1.0",
    "rollup-plugin-terser": "^5.3.0",
    "serve": "^11.2.0"
  },
  "scripts": {
    "build": "npm-run-all --parallel build-main build-docs",
    "build-main": "rollup -c rollup.config.main.js",
    "build-docs": "rollup -c rollup.config.docs.js",
    "watch": "npm-run-all --parallel watch-main watch-docs",
    "watch-main": "rollup -c rollup.config.main.js -w",
    "watch-docs": "rollup -c rollup.config.docs.js -w",
    "start": "serve dist",
    "dev": "npm-run-all --parallel start watch"
  },
  "dependencies": {
    "eslint": "^6.6.0",
    "moo": "^0.5.1",
    "nearley": "^2.19.2",
    "typescript": "^3.8.3"
  }
}
